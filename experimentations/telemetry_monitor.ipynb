    "# Real-time packet capture\n",
    "def capture_packets(host, duration=10):\n",
    "    capture_cmd = f'tcpdump -i {host.defaultIntf()} -w {host.name}_capture.pcap -c 100'\n",
    "    host.cmd(capture_cmd)\n",
    "    return f'{host.name}_capture.pcap'"
   ]
