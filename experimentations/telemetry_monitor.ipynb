    "import mininet.net\n",
    "import subprocess\n",
    "\n",
    "# Function to capture network statistics\n",
    "def get_network_stats(net):\n",
    "    stats = {}\n",
    "    for host in net.hosts:\n",
    "        # Capture host-specific network stats\n",
    "        stats[host.name] = {\n",
    "            'ip': host.IP(),\n",
    "            'mac': host.MAC(),\n",
    "            'interfaces': host.intfList()\n",
    "        }\n",
    "    return stats"
   ]
